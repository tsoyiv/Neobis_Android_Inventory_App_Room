<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.update.UpdateFragment">

    <ImageButton
        android:id="@+id/update_image_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/image_button"
        app:layout_constraintBottom_toTopOf="@+id/update_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_updateItem" />

    <TextView
        android:id="@+id/text_updateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/roboto"
        android:text="Детали о товаре"
        android:textColor="#003C68"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/update_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="207dp"
        android:fontFamily="@font/roboto"
        android:text="Наименование товара"
        android:textColor="#A6A7A7"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_updateItem" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_name_item"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:hint="Впишите название товара"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_name_text">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/input_shape"
            android:id="@+id/item_updateName_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#1F1F1F" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/update_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="263dp"
        android:fontFamily="@font/roboto"
        android:text="Цена товара"
        android:textColor="#A6A7A7"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_name_item" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_cost_item"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:hint="Впишите цену товара"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_price_text">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/input_shape"
            android:id="@+id/item_updatePrice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#1F1F1F" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/update_distri_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="203dp"
        android:fontFamily="@font/roboto"
        android:text="Производитель товара"
        android:textColor="#A6A7A7"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_cost_item" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_ditribiutor_items"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:hint="Впишите производителя товара"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_distri_text">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/input_shape"
            android:id="@+id/item_updateDistributor_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#1F1F1F" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/amount_text_disr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="224dp"
        android:fontFamily="@font/roboto"
        android:text="Количество товара"
        android:textColor="#A6A7A7"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_ditribiutor_items" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_amount_item"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:hint="Количество товара"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_text_disr">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/input_shape"
            android:id="@+id/item_updateAmount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#1F1F1F" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/update_button"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="Сохранить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_amount_item" />

    <TextView
        android:id="@+id/cancel_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Отмена"
        android:clickable="true"
        android:textSize="16sp"
        android:textColor="#2A8CFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_amount_item" />
    <ImageButton
        android:id="@+id/arrow_update_fragment_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="35dp"
        android:background="#E5E5E5"
        android:src="@drawable/arrowleft"
        app:layout_constraintEnd_toStartOf="@+id/text_updateItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>